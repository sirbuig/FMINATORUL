@model FMInatorul.Models.Profesor

@{
    ViewData["Title"] = "Editare Materie";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h2>Editare Materie</h2>

@using (Html.BeginForm("EditMaterie", "Professors", FormMethod.Post, new { id = Model.Id }))
{
    <label>Selectați Materiile</label>
    <br />

    <div>
        @foreach (var materie in Model.Materii)
        {
            <div class="form-check">
                <input type="checkbox"
                       class="form-check-input"
                       id="materie_@materie.Value"
                       name="SelectedMateriiIds"
                       value="@materie.Value"
                @(Model.SelectedMateriiIds.Contains(int.Parse(materie.Value)) ? "checked" : "") />
                <label class="form-check-label" for="materie_@materie.Value">
                    @materie.Text
                </label>
            </div>
        }
    </div>

    @Html.HiddenFor(m => m.CompletedProfile)
    @Html.HiddenFor(m => m.ApplicationUserId)
    @Html.HiddenFor(m => m.FacultateID)

    <br />
    <button type="submit" class="btn btn-primary">Save</button>
}
